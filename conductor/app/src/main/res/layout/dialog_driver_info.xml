<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/driver_info_dialog"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_gravity="bottom">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/driver_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="7dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="Conductor Asignado"
                android:textColor="@color/colorAccent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif"
                    android:text="Nombre: "
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nombre del conductor"
                    android:layout_gravity="start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    android:text="No. placa: "
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/vehicle_plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="placa del vehiculo"
                    android:layout_gravity="start"/>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp">

                <Button
                    android:id="@+id/driver_info_okBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="OK"
                    android:textColor="@color/colorAccent"
                    style="?android:attr/borderlessButtonStyle"
                    />
            </FrameLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
