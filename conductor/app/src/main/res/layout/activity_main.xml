<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.geotaxi.taxiseguroconductor.ui.MainActivity">

    <org.osmdroid.views.MapView android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_confirm_client"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/confim_client_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Solicitud de Carrera"
                android:layout_weight="80"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/nombre_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente: "
                    android:layout_weight="80"
                    android:textAlignment="textStart"
                    />
                <TextView
                    android:id="@+id/input_nombre_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="80"
                    android:textAlignment="textEnd"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ubicacion_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicacion de cliente: "
                    android:layout_weight="80"
                    android:textAlignment="textStart"
                    />
                <TextView
                    android:id="@+id/input_ubicacion_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:textAlignment="textEnd"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    />
            </LinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="30"
                android:columnCount="4"
                android:rowCount="2"
                >
                <Space
                    android:layout_width="20dp"
                    />

                <Space
                    android:layout_width="70dp"
                    />
                <Button
                    android:layout_columnSpan="2"
                    android:id="@+id/ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green"
                    android:textColor="@color/colorPrimary"
                    android:layout_rowSpan="2"
                    android:text="OK"
                    android:onClick="acceptRoute"
                    />

                <Space
                    android:layout_width="20dp"
                    />
            </GridLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_confirmation"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Esperando confirmaciÃ³n del cliente..."
                android:layout_weight="70"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30">

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#7d7979"
                    android:indeterminate="true"
                    android:progress="1"
                    android:max="100" />
            </FrameLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_items" />

</android.support.v4.widget.DrawerLayout>
